# Airtable MCP Server Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Required: Airtable Personal Access Token
# Get this from: https://airtable.com/account
# Supports multiple variable names (use one):
AIRTABLE_PAT=your_personal_access_token_here
# Alternative names (uncomment if not using AIRTABLE_PAT):
# AIRTABLE_TOKEN=your_personal_access_token_here
# AIRTABLE_API_TOKEN=your_personal_access_token_here
# AIRTABLE_API_KEY=your_personal_access_token_here

# Optional: Default Airtable Base ID
# Get this from your Airtable base URL: https://airtable.com/[BASE_ID]/...
# If not set, you can use the list_bases tool to discover bases
AIRTABLE_BASE_ID=your_base_id_here
# Alternative names (uncomment if not using AIRTABLE_BASE_ID):
# AIRTABLE_DEFAULT_BASE=your_base_id_here
# AIRTABLE_BASE=your_base_id_here

# Optional: Server Configuration
# Port for HTTP mode (Railway will auto-assign, but this is a fallback)
PORT=8080

# Optional: Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Governance and Security
# Comma-separated list of allowed base IDs (e.g., "app123,app456")
# AIRTABLE_ALLOWED_BASES=app123,app456

# Optional: Comma-separated list of allowed tables in format "baseId:tableName"
# AIRTABLE_ALLOWED_TABLES=app123:Tasks,app123:Projects

# Optional: Exception queue size (default: 500)
# EXCEPTION_QUEUE_SIZE=500

